<%= notice %>
<h2>User info</h2>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
         <table class="table">
            <tbody>
             <tr></tr>
             <tr>
               <th>name</th>
               <th><%= @user.name %></th>
             </tr>
             <tr>
               <th>introduction</th>
               <th><%= @user.introduction %></th>
             </tr>
            </tbody>
          </table>

         <%= link_to edit_user_path(@user.id) do %>
           <p class="btn btn-outline-secondary btn-block fas fa-user-cog"></p>
         <% end %>
            <%= form_with model: @booktext, local:true do |f| %>
              <h2>New book</h2>
              <h4>Title</h4>
              <%= f.text_field :title %>
                 <h4>Opinion</h4>
                  <%= f.text_area :body %>
              <div class="row">
                <%= f.submit 'Create Book', class:"btn btn-success" %>
              </div>
            <% end %>

     </div>
       <div class="col-md-8 offset-md-1">
           <h2>Book detail</h2>
          <table class="table table-striped">
            <%= link_to book_path(@book.id) do %>
             <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %><br>
             <tr>
              <td><%= link_to @book.user.name, user_path(@book.user.id) %></td>
              <td><%= link_to @book.title%></td>
              <td><%= @book.body %></td>
              <% if @user.id == current_user.id %>
              <td><%= link_to 'Edit', edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
              <% end %>
             </tr>
            <% end %>
          </table>
       </div>
      </div>
  </div>
